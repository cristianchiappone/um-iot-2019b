[{
		"id": "mqtt",
		"type": "MQTT",
		"configuration": {
			"brokers": [{
					"host": "test.mosquitto.org", //SERVIDOR DONDE PUBLICA NUESTRO SMARTPHONE Y AL CUAL NOS VAMOS A SUSCRIBIR
					"port": 1883, //PUERTO MQTT
					"ssl": false,
					"retryInterval": 6000, //FRECUENCIA EN MILISEGUNDOS CON LA QUE ACTUALIZARÁ LOS MENSAJES
					"credentials": {
						"type": "anonymous"
					},
					"mapping": [{
							"topicFilter": "zanzito/cchiappone/location", //TÓPICO DONDE PUBLICA NUESTRO SMARTPHONE CON ZANZITO
							"converter": {
								"type": "json",
								"filterExpression": "",
                                "deviceNameTopicExpression": "cchiappone", //NOMBRE DEL DISPOSITIVO DONDE SE GUARDARAN LOS MENSAJES RECIBIDOS
								"attributes": [{
										"type": "string",
										"key": "model",
										"value": "motorola" //OPCIONAL: MARCAL O MODELO DEL DISPOSITIVO MÓVIL
									}
								],
								"timeseries": [{
										"type": "double", //TIPO DE DATO QUE SE VA A RECIBIR
										"key": "latitude", //NOMBRE DE LA VARIABLE DONDE SE PUBLICA LATITUD
										"value": "${$.latitude}"
									},{
										"type": "double",
										"key": "longitude", //NOMBRE DE LA VARIABLE DONDE SE PUBLICA LONGITUD
										"value": "${$.longitude}"
									}
                                ]
							}
						}
					]					
				}
			]
		}
	}
]

